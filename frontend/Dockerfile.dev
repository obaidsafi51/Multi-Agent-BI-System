# Development-optimized Dockerfile for Next.js
FROM node:22-alpine

WORKDIR /app

# Install system dependencies (minimal for development)
RUN apk update && apk add --no-cache curl \
    && rm -rf /var/cache/apk/* \
    && npm config set registry https://registry.npmjs.org/ \
    && npm config set fetch-timeout 300000 \
    && addgroup -g 1001 -S nodejs \
    && adduser -S nextjs -u 1001

# Copy package files first for better Docker layer caching
COPY package*.json ./

# Install dependencies with cache optimization
RUN npm install --prefer-offline --no-audit --progress=false \
    && npm cache clean --force

# Copy source code (this should properly exclude node_modules, .next)
# The key is ensuring .dockerignore is working correctly
COPY --chown=nextjs:nodejs . .

# Create .next directory with proper permissions
RUN mkdir -p /app/.next \
    && chown -R nextjs:nodejs /app/.next \
    && chmod 755 /app/.next

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000 || exit 1

# Start development server
CMD ["npm", "run", "dev:stable"]
