# Database Configuration
# For local development (Docker)
TIDB_HOST=tidb
TIDB_PORT=4000
TIDB_USER=root
TIDB_PASSWORD=your_tidb_password_here
TIDB_DATABASE=ai_cfo_bi
TIDB_SSL_DISABLED=true

# For TiDB Cloud (uncomment and configure when using TiDB Cloud)
# TIDB_HOST=gateway01.ap-northeast-1.prod.aws.tidbcloud.com
# TIDB_PORT=4000
# TIDB_USER=xxxxxx.root
# TIDB_PASSWORD=your_tidb_cloud_password
# TIDB_DATABASE=test
# TIDB_SSL_DISABLED=false
# TIDB_SSL_VERIFY_CERT=true
# TIDB_SSL_VERIFY_IDENTITY=true
# CA_PATH=/etc/ssl/certs/ca-certificates.crt

# TiDB Connection Settings
TIDB_AUTOCOMMIT=true

# Database Connection Settings (PyMySQL)
DB_QUERY_TIMEOUT=30
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1.0

# API Keys
KIMI_API_KEY=your_kimi_api_key_here

# Security
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Development Settings
NODE_ENV=development
DEBUG=true

# Optional: Custom ports (if defaults conflict)
# FRONTEND_PORT=3000
# BACKEND_PORT=8000
# REDIS_PORT=6379
# RABBITMQ_PORT=5672
# RABBITMQ_MANAGEMENT_PORT=15672
# TIDB_PORT=4000