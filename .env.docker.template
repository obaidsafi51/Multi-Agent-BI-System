# üê≥ Docker Environment Configuration
# Copy this file to .env and fill in your specific values

# =============================================================================
# REQUIRED: TiDB Cloud Database Configuration
# =============================================================================
TIDB_HOST=your-tidb-host.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your-username
TIDB_PASSWORD=your-password
TIDB_DATABASE=your-database
TIDB_SSL_CA=
TIDB_SSL_VERIFY_CERT=true
TIDB_SSL_VERIFY_IDENTITY=true

# =============================================================================
# REQUIRED: KIMI API Configuration (Moonshot AI)
# =============================================================================
KIMI_API_KEY=your-kimi-api-key-here
KIMI_API_BASE_URL=https://api.moonshot.ai/v1
KIMI_MODEL=moonshot-v1-8k

# =============================================================================
# OPTIONAL: System Configuration
# =============================================================================
SECRET_KEY=your-secret-key-for-jwt-tokens
DATABASE_URL=postgresql://user:password@localhost/dbname

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_NAME=tidb-mcp-server
MCP_SERVER_VERSION=0.1.0
MCP_MAX_CONNECTIONS=20
MCP_REQUEST_TIMEOUT=30

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# =============================================================================
# Security & Rate Limiting
# =============================================================================
MAX_QUERY_TIMEOUT=30
MAX_SAMPLE_ROWS=100
RATE_LIMIT_RPM=100

# =============================================================================
# HTTP API Configuration
# =============================================================================
USE_HTTP_API=true
ENABLE_WEBSOCKETS=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# SSL Configuration (if needed)
# =============================================================================
SSL_CERT_PATH=/dev/null

# =============================================================================
# Development vs Production Settings
# =============================================================================
NODE_ENV=production
PYTHONUNBUFFERED=1
