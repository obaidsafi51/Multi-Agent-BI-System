# Universal MCP Server Configuration

# Database Configuration (TiDB Cloud)
TIDB_HOST=your-tidb-host.clusters.tidb-cloud.com
TIDB_PORT=4000
TIDB_USER=your-username
TIDB_PASSWORD=your-password
TIDB_DATABASE=your-database-name
TIDB_SSL_CA=path/to/ca-cert.pem
TIDB_SSL_VERIFY_CERT=true
TIDB_SSL_VERIFY_IDENTITY=true

# LLM Configuration (Kimi/Moonshot)
LLM_PROVIDER=kimi
LLM_API_KEY=your-kimi-api-key
LLM_BASE_URL=https://api.moonshot.cn/v1
LLM_MODEL=moonshot-v1-8k
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# Tools Configuration
ENABLED_TOOLS=database,llm,analytics
DATABASE_TOOLS_ENABLED=true
LLM_TOOLS_ENABLED=true
ANALYTICS_TOOLS_ENABLED=true

# MCP Server Configuration
MCP_SERVER_NAME=universal-mcp-server
MCP_SERVER_VERSION=1.0.0
MCP_MAX_CONNECTIONS=10
MCP_REQUEST_TIMEOUT=30

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Security Configuration
MAX_QUERY_TIMEOUT=30
MAX_SAMPLE_ROWS=100
RATE_LIMIT_RPM=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# HTTP API Configuration
USE_HTTP_API=true

# MCP Server Configuration
